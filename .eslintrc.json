{
  "extends": "next/core-web-vitals",  
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "linebreak-style": [0, "error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "trailingCommas": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "arrowParens": "avoid",
        "trailingCommas": "none",
        "tabWidth": 2,
        "jsxSingleQuote": true,
        "endOfLine": "auto"
      }
    ],
    "space-before-function-paren": "off",
    "react/prop-types": "off",
    "@typescript-eslint/no-non-null-assertion": "off"
  }
}
